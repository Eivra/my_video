<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
       android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
            android:background="#000"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_name"
                android:textColor="#ffffff"
                android:text="Video Name"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
<!--
            <ImageView
                android:layout_marginRight="8dp"
                android:id="@+id/iv_beteery"
                android:src="@drawable/battery_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/time"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textColor="#ffffff"
                android:text="13:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
-->
    </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/voice_bottom"
            android:orientation="horizontal"
            android:background="#90B8F5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/but_voice"
                android:background="@drawable/but_voice_select"
                android:layout_width="30dp"
                android:layout_height="30dp" />
             <SeekBar
                android:id="@+id/sb_voice"
                android:layout_marginRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxHeight="6dp"
                android:minHeight="6dp"
                android:progress="20"
                android:thumb="@drawable/pro_thumb" />

            <Button
                android:id="@+id/selectVideo"
                android:background="@drawable/select_video"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/ll_bottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="#90B8F5"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="8dp"
                android:id="@+id/tv_curr_time"
                android:text="00:20"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <SeekBar
                android:id="@+id/sb_time"
                android:layout_marginRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxHeight="6dp"
                android:minHeight="6dp"
                android:progress="10"
                android:thumb="@drawable/pro_thumb" />
            <TextView
                android:layout_marginRight="8dp"
                android:id="@+id/tv_allTime"
                android:text="00:50"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:background="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/but_back"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:background="@drawable/but_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/but_last"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:background="@drawable/but_last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/but_stop"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:background="@drawable/but_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/but_next"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:background="@drawable/but_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/but_screen"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/but_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>